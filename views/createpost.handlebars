<section class="card">
  <header>
    <h3>Create New Post</h3> 
  </header>
  <div class="form-group">
    <label id="title-lbl" for="title-input">Title</label><br>
    <textarea id="title-input" name="title-input" rows=1></textarea>
  </div>
  <div class="form-group">
    <label id="create-post-lbl" for="content-input">Content</label><br>
    <textarea id="content-input" name="content-input" rows=3></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id="create-post-btn" type="submit">Create</button>
  </div>
</section>