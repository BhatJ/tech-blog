<section class="card">
  <header>
    <h3>Edit Post</h3> 
  </header>
  <div class="form-group">
    <label id="title-lbl" for="title-input">Title</label><br>
    <textarea id="title-input" name="title-input" rows=1>{{blog.title}}</textarea>
  </div>
  <div class="form-group">
    <label id="create-post-lbl" for="content-input">Content</label><br>
    <textarea id="content-input" name="content-input" rows=3>{{blog.content}}</textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id="update-post-btn" type="submit">Update</button>
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id="delete-post-btn" type="submit">Delete</button>
  </div>
</section>